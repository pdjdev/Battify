<Window x:Class="Battify.TrayGuideWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Battify 설치 완료" 
        Height="460" 
        Width="460" 
        Background="#1B1B1B"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        UseLayoutRounding="True">

    <Window.Resources>
        <!-- 다크 테마 버튼 스타일 -->
        <Style x:Key="DarkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#282828"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#383838"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#484848"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 상단 텍스트 -->
        <TextBlock Grid.Row="0"
                   Text="Battify가 설치되었습니다!" 
                   Foreground="White" 
                   FontSize="18" 
                   FontWeight="SemiBold"
                   HorizontalAlignment="Left"
                   Margin="20,20,20,15"
                   VerticalAlignment="Top"/>

        <!-- 안내 이미지 영역 -->
        <Border Grid.Row="1"
                Background="#252525" 
                CornerRadius="8" 
                Margin="20,0,20,0"
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 이미지 박스 -->
                <Image x:Name="GuideImage" 
                       Grid.Row="0" 
                       Stretch="Uniform"
                       VerticalAlignment="Center"
                       Margin="0,0,0,15"/>

                <!-- 안내 텍스트 -->
                <TextBlock Grid.Row="1" 
                           TextWrapping="Wrap" 
                           Foreground="#CCCCCC" 
                           FontSize="13"
                           LineHeight="20"
                           TextAlignment="Left">
                    <Run Text="배터리 퍼센트 아이콘이 보이지 않는다면,"/>
                    <LineBreak/>
                    <Run Text="퍼센트 숫자("/>
                    <Run x:Name="CurrentBatteryPercentText" Text="80" FontWeight="Bold" Foreground="#FFFFFF"/>
                    <Run Text=") 아이콘을 밖으로 드래그하여 고정해 주세요."/>
                </TextBlock>
            </Grid>
        </Border>

        <!-- 하단 버튼 영역 -->
        <Button Grid.Row="2"
                x:Name="ConfirmButton" 
                Content="확인했어요" 
                Style="{StaticResource DarkButtonStyle}"
                HorizontalAlignment="Right"
                Width="190"
                Height="41"
                Click="ConfirmButton_Click"
                Margin="0,15,20,20"/>
    </Grid>
</Window>
